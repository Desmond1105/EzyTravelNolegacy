        <activity
            android:name=".Planner"
            android:exported="false" />
        <activity
            android:name=".Account"
            android:exported="false" />
        <activity
            android:name=".Spending"
            android:exported="false" />
        <activity
            android:name=".UserProfile"
            android:exported="true">
